---
layout: "base.njk"
---
       
<article class="post">
<div class="flow">
  
    <h1 class="article-title">
      {{ title }}
    </h1>
    <p>Last updated on {{ date | readableDate }}</p>
    <figure class="main-article__figure">
      <img src="{{ image }}" alt=" {{ imageAlt }}">
      <figcaption>
        {{ imageAlt }}
      </figcaption>
    </figure>
    
    {{ content | safe}}
  
</div>
</article>
 
